{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Alapértelmezett log szint: Információ
      "Microsoft.AspNetCore": "Warning" // Microsoft ASP.NET Core log szintje: Figyelmeztetés
    }
  },
  "AllowedHosts": "*", // Minden host engedélyezett (fejlesztéshez ok)

  "ConnectionStrings": {
    // Adatbázis kapcsolat MySQL-hez
    "DefaultConnection": "Server=localhost;Database=bejelentkezesiRendszer;Uid=root;Pwd=;CharSet=utf8mb4;"
    // Server: localhost (helyi DB)
    // Database: adatbázis neve
    // Uid / Pwd: MySQL felhasználó/jelszó
    // CharSet: utf8mb4 a helyes Unicode támogatáshoz
  },

  "JwtSettings": {
    "SecretKey": "your-very-long-secret-key-here-minimum-32-characters-for-security",
    // Titkos kulcs JWT aláíráshoz (legalább 32 karakter)

    "Issuer": "YourAppIssuer", // Kibocsátó neve (issuer)
    "Audience": "YourAppAudience", // Felhasználók, akik érvényesek lehetnek (audience)
    "ExpirationInMinutes": 10, // Access token lejárati ideje percekben
    "RefreshTokenExpirationInDays": 15 // Refresh token lejárati ideje napokban
  }
}
